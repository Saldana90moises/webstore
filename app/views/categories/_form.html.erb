<%= form_for @category, remote: true do |f| %>
    <div class="form-group">
      <h4 class="control-label">Datos de la categoría:</h4>
    </div>

    <div class="item form-group<%= @category.errors[:name].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :name, "Nombre de Categoría: " %>
      <div class="input-group">
        <%= f.text_field :name, {:class=> "form-control", :placeholder=>"Introduzca el nombre de la categoría..."} %>        
        <%if @category.errors[:name].any? %>
          <p class="bg-danger"><%= @category.errors[:name].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @category.errors[:keywords].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :keywords, "Descripción de la categoría: " %>
      <div class="input-group">
        <%= f.text_area :keywords, {class: "form-control", :placeholder=>"Introduzca la descripción de la categoría..."} %>
        <%if @category.errors[:keywords].any? %>
          <p class="bg-danger"><%= @category.errors[:keywords].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @category.new_record? ? "Crear Categoría" : "Actualizar Categoría", :class => "btn btn-success"%>
    </div>  
<% end %>